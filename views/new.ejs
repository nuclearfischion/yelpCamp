<% include partials/header %>
<script>
    
</script>

<div class="container">
    <form action="/campgrounds" method="POST" >
        <div class="row justify-content-center">
            <div class="col-lg-4">
        
                <!-- Header -->
                <h2>Add A Campground</h2>
              
                <!-- campground name -->
                <div class="form-group">
                    <div class="custom-file">
                        <label for="campName" class="text-left">Campground Name</label>
                        <input class="form-control" id="campName" type="text" name="name" placeholder="Arbor Hills" >
                    </div>
                </div>
              
                <!-- Image -->
                <div class="form-group">
                    <div class="custom-file">
                        <label class="text-left" for="campPhoto">Campground Photo</label>
                        <input class="form-control" id="campPhoto" type="text" accept="/image/*" name="image" placeholder="image.jpg">
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <div class="custom-file">
                        <label class="text-left" for="campDescription">Campground Description</label>
                        <input class="form-control" id="campDescription" type="text" name="description" placeholder="Description">
                    </div>
                </div>

                <!-- Submit button -->
                <input class="btn btn-default btn-block form-group" type="submit">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </form>
</div>



